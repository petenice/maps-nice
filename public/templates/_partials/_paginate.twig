<div class="px-4 sm:px-0 my-10">
  <div class="flex items-center justify-center space-x-2">
  {% if pageInfo.prevUrl %}
          <a href="{{ pageInfo.prevUrl }}" class="relative inline-flex items-center px-3 py-3 bg-blue-main hover:bg-red text-sm leading-5 text-white active:bg-black" aria-label="Previous">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
          </a>
  {% endif %}
  
  {% for page, url in pageInfo.getPrevUrls(3) %}
    <a href="{{url}}" class="-ml-px no-underline relative inline-flex items-center px-5 py-3 text-sm leading-5 text-white active:bg-black bg-blue-main">{{ page }}</a>
  {% endfor %}

<div class="-ml-px no-underline relative inline-flex items-center px-5 py-3 text-sm leading-5 text-white active:bg-black bg-red">{{ pageInfo.currentPage }}</div>

  {% for page, url in pageInfo.getNextUrls(3) %}
    <a href="{{url}}" class="-ml-px no-underline relative inline-flex items-center px-5 py-3 text-sm leading-5 text-white active:bg-black bg-blue-main">{{ page }}</a>
  {% endfor %}

  {% if pageInfo.nextUrl %}
          <a href="{{ pageInfo.nextUrl }}" class="-ml-px relative inline-flex items-center px-3 py-3 bg-blue-main hover:bg-red text-sm leading-5 text-white active:bg-black" aria-label="Next">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
          </a>
  {% endif %}
  </div>

  <div class="w-full text-center mt-2">
    <p class="text-sm  text-blue-main">Page {{ pageInfo.currentPage }} of {{ pageInfo.totalPages }} pages</p>
  </div>
</div>